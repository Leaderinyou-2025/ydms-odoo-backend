<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Question List View -->
        <record id="view_ydms_assessment_question_tree" model="ir.ui.view">
            <field name="name">liy.ydms.assessment.question.tree</field>
            <field name="model">liy.ydms.assessment.question</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="assessment_id"/>
                    <field name="answer_type"/>
                    <field name="display_type"/>
                    <field name="scores" width="150"/>
                    <field name="order_weight" width="150"/>
                </list>
            </field>
        </record>

        <!-- Question Form View -->
        <record id="view_ydms_assessment_question_form" model="ir.ui.view">
            <field name="name">liy.ydms.assessment.question.form</field>
            <field name="model">liy.ydms.assessment.question</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="assessment_id"/>
                                <field name="answer_type"/>
                                <field name="display_type"/>
                            </group>
                            <group>
                                <field name="scores"/>
                                <field name="order_weight"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                        <notebook>
                            <page string="Answer Options" invisible="answer_type == 'input_text'">
                                <field name="answer_ids">
                                    <list editable="bottom">
                                        <field name="name"/>
                                        <field name="encourage"/>
                                        <field name="scores" width="150"/>
                                        <field name="order_weight" width="150"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action for Question -->
        <record id="action_ydms_assessment_question" model="ir.actions.act_window">
            <field name="name">Câu hỏi</field>
            <field name="res_model">liy.ydms.assessment.question</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu Item for Question -->
        <menuitem id="menu_ydms_assessment_question" name="Bảng hỏi - Câu hỏi" parent="ydms_content_menu"
                  action="action_ydms_assessment_question" sequence="60"/>
    </data>
</odoo>
