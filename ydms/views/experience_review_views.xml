<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form view-->
        <record id="view_ydms_experience_review_form" model="ir.ui.view">
            <field name="name">liy.ydms.experience.review.form</field>
            <field name="model">liy.ydms.experience.review</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="experience_id"/>
                            <field name="review"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- List view -->
        <record id="view_ydms_experience_review_tree" model="ir.ui.view">
            <field name="name">liy.ydms.experience.review.tree</field>
            <field name="model">liy.ydms.experience.review</field>
            <field name="arch" type="xml">
                <list>
                    <field name="experience_id"/>
                    <field name="review"/>
                </list>
            </field>
        </record>
        <!-- Action -->
        <record id="action_ydms_experience_review" model="ir.actions.act_window">
            <field name="name">Đánh giá chia sẻ king nghiệm</field>
            <field name="res_model">liy.ydms.experience.review</field>
            <field name="view_mode">list,form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'list', 'view_id': ref('view_ydms_experience_review_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('view_ydms_experience_review_form')})]"/>
        </record>
        <!-- Menu item-->
        <menuitem name="Đánh giá chia sẻ kinh nghiệm" id="experience_review_menu" parent="ydms_family_menu"
                  action="action_ydms_experience_review" sequence="30"/>
    </data>
</odoo>
