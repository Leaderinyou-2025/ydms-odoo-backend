<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form view-->
        <record id="ydms_app_version_view_form" model="ir.ui.view">
            <field name="name">liy.ydms.app.version.form</field>
            <field name="model">liy.ydms.app.version</field>
            <field name="arch" type="xml">
                <form string="Phiên bản App">
                    <sheet>
                        <field name="build_bundle_file" widget='binary_file'/>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="version_code"/>
                                <field name="version_build"/>
                                <field name="desciption"/>
                            </group>
                            <group>
                                <field name="platform"/>
                                <field name="public_url" widget="url" readonly="1"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- List view -->
        <record id="ydms_app_version_view_tree" model="ir.ui.view">
            <field name="name">liy.ydms.app.version.tree</field>
            <field name="model">liy.ydms.app.version</field>
            <field name="arch" type="xml">
                <list string="Phiên bản App">
                    <field name="name"/>
                    <field name="version_build"/>
                    <field name="platform"/>
                    <field name="desciption"/>
                    <field name="active"/>
                    <field name="public_url" widget="url"/>
                </list>
            </field>
        </record>
        <!-- Action -->
        <record id="ydms_app_version_action" model="ir.actions.act_window">
            <field name="name">Quản lý phiên bản App</field>
            <field name="res_model">liy.ydms.app.version</field>
            <field name="view_mode">list,form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'list', 'view_id': ref('ydms_app_version_view_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('ydms_app_version_view_form')})]"/>
        </record>
        <!-- Menu item-->
        <menuitem name="Quản lý phiên bản App" id="version_app_menu" parent="ydms_setting_menu"
                  action="ydms_app_version_action" sequence="10"/>
    </data>
</odoo>
