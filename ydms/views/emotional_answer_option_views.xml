<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form view-->
        <record id="ydms_emotional_answer_view_form" model="ir.ui.view">
            <field name="name">liy.ydms.emotional.answer.option.form</field>
            <field name="model">liy.ydms.emotional.answer.option</field>
            <field name="arch" type="xml">
                <form string="Câu hỏi cảm xúc">
                    <sheet>
                        <field name="image_1920" widget='image' class="oe_avatar"
                               options='{"zoom": true, "preview_image": "image_128"}'/>
                        <group>
                            <group>
                                <field name="question_id"/>
                                <field name="name"/>
                                <field name="scores"/>
                            </group>
                            <group>
                                <field name="encourage"/>
                                <field name="order_weight"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Hướng dẫn điều tiết cảm xúc">
                                <field name="guide_category_ids">
                                    <list editable="bottom">
                                        <field name="name" required="True"/>
                                        <field name="desciption"/>
                                        <field name="tags"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree view -->
        <record id="ydms_emotional_answer_view_tree" model="ir.ui.view">
            <field name="name">liy.ydms.emotional.answer.option.tree</field>
            <field name="model">liy.ydms.emotional.answer.option</field>
            <field name="arch" type="xml">
                <list string="Câu hỏi cảm xúc">
                    <field name="order_weight" string="⠿" widget="handle"/>
                    <field name="image_1920" string="Icon" widget='image' options="{'preview_image': 'image_128'}"/>
                    <field name="question_id"/>
                    <field name="name"/>
                    <field name="scores"/>
                    <field name="encourage"/>
                    <field name="guide_category_ids" widget="many2many_tags"/>
                </list>
            </field>
        </record>
        <!-- Action-->
        <record id="emotional_answer_action" model="ir.actions.act_window">
            <field name="name">Câu hỏi cảm xúc</field>
            <field name="res_model">liy.ydms.emotional.answer.option</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
        </record>
        <!-- Menu item-->
        <menuitem name="Câu trả lời cảm xúc" id="emotional_answer_menu" parent="ydms_content_menu"
                  action="emotional_answer_action" sequence="30"/>
    </data>
</odoo>
