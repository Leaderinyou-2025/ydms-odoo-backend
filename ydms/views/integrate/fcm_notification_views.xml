<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View for YDMS Notification -->
        <record id="view_ydms_notification_form" model="ir.ui.view">
            <field name="name">liy.ydms.notification.form</field>
            <field name="model">liy.ydms.notification</field>
            <field name="arch" type="xml">
                <form string="Thông báo">
                    <sheet>
                        <group>
                            <field name="sender_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="recipient_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="body"/>
                        </group>
                        <group>
                            <field name="attachment_id" filename="attachment_name"/>
                            <field name="attachment_name" invisible="1"/>
                        </group>
                        <notebook>
                            <page string="Nhật ký gửi thông báo">
                                <field name="notification_log_ids" nolabel="1">
                                    <list editable="bottom">
                                        <field name="create_date" string="Ngày tạo"/>
                                        <field name="recipient_ids" string="Người nhận"/>
                                        <field name="state" string="Trạng thái"/>
                                        <field name="success_count" string="Số lượng hoàn thành" width="150"/>
                                        <field name="fail_count" string="Số lượng thất bại" width="150"/>
                                        <field name="message" string="Phản hồi"/>
                                        <field name="completed_on" string="Ngày hoàn thành"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View for YDMS Notification -->
        <record id="view_ydms_notification_tree" model="ir.ui.view">
            <field name="name">liy.ydms.notification.tree</field>
            <field name="model">liy.ydms.notification</field>
            <field name="arch" type="xml">
                <list string="Thông báo">
                    <field name="create_date" string="Ngày tạo"/>
                    <field name="name" string="Về việc"/>
                    <field name="description" string="Mô tả ngắn"/>
                    <field name="sender_id" string="Người gửi"/>
                    <field name="recipient_ids" widget="many2many_tags" string="Người nhận"/>
                    <field name="attachment_name" string="Tài liệu đính kèm"/>
                </list>
            </field>
        </record>

        <!-- Action for YDMS Notification -->
        <record id="action_ydms_notification" model="ir.actions.act_window">
            <field name="name">Thông báo</field>
            <field name="res_model">liy.ydms.notification</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_ydms_notification_tree"/>
        </record>

        <!-- Menu Item for YDMS Notification -->
        <menuitem id="menu_ydms_notification"
                  name="Thông báo"
                  action="action_ydms_notification"
                  parent="ydms_notification_menu"
                  sequence="10"/>
    </data>
</odoo>
