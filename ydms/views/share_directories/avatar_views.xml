<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form view-->
        <record id="view_ydms_avatar_form" model="ir.ui.view">
            <field name="name">ydms.avatar.form</field>
            <field name="model">liy.ydms.avatars</field>
            <field name="arch" type="xml">
                <form string="Avatar">
                    <sheet>
                        <group>
                            <group col="2">
                                <field name="name"/>
                                <field name="tags"/>
                            </group>
                            <group col="2">
                                <field name="image_1920" widget="image" class="oe_avatar"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Kanban view -->
        <record id="view_ydms_avatar_kanban" model="ir.ui.view">
            <field name="name">ydms.avatar.kanban</field>
            <field name="model">liy.ydms.avatars</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column">
                    <field name="image_1920"/>
                    <field name="tags"/>
                    <field name="name"/>
                    <templates>
                        <t t-name="card">
                            <div class="row">
                                <div class="col-3 justify-content-center">
                                    <aside class="o_kanban_aside_full">
                                        <div class="o_kanban_img_full position-relative"
                                             style="width: 80px; height: 80px;">
                                            <field name="image_1920" widget="image" class="w-100 h-100 rounded-circle"/>
                                        </div>
                                    </aside>
                                </div>
                                <div class="col-9">
                                    <div class="o_kanban_details">
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <small>
                                            <i class="fa fa-tag"></i>
                                            <field name="tags"/>
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- Tree view -->
        <record id="view_ydms_avatar_tree" model="ir.ui.view">
            <field name="name">ydms.avatar.tree</field>
            <field name="model">liy.ydms.avatars</field>
            <field name="arch" type="xml">
                <list string="Avatar">
                    <field name="name"/>
                    <field name="tags"/>
                </list>
            </field>
        </record>
        <!-- Action-->
        <record id="action_ydms_avatar" model="ir.actions.act_window">
            <field name="name">Avatar</field>
            <field name="res_model">liy.ydms.avatars</field>
            <field name="view_mode">list,kanban,form</field>
        </record>
        <!-- MENU -->
        <menuitem id="menu_ydms_avatar" name="Avatar" parent="shared_directory_menu"
                  action="action_ydms_avatar" sequence="40"/>
    </data>
</odoo>
