<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Form view-->
        <record id="ydms_classroom_view_form" model="ir.ui.view">
                <field name="name">liy.ydms.classroom.form</field>
                <field name="model">liy.ydms.classroom</field>
                <field name="arch" type="xml">
                        <form string="Lớp học">
                                <sheet>
                                        <group>
                                                <group>
                                                        <field name="school_id"/>
                                                        <field name="name"/>
                                                </group>
                                                <group>
                                                        <field name="code"/>
                                                </group>
                                        </group>
                                </sheet>
                        </form>
                </field>
        </record>

        <!-- Tree view -->
        <record id="ydms_classroom_view_tree" model="ir.ui.view">
                <field name="name">liy.ydms.classroom.tree</field>
                <field name="model">liy.ydms.classroom</field>
                <field name="arch" type="xml">
                        <list string="Lớp học">
                                <field name="school_id"/>
                                <field name="name"/>
                                <field name="code"/>
                        </list>
                </field>
        </record>

        <!-- Action-->
        <record id="ydms_classroom_action" model="ir.actions.act_window">
                <field name="name">Lớp học</field>
                <field name="res_model">liy.ydms.classroom</field>
                <field name="view_mode">list,form</field>
        </record>

        <!-- Menu item-->
        <menuitem name="Lớp học" id="classroom_menu" parent="shared_directory_menu"
                  action="ydms_classroom_action" sequence="20"/>
</odoo>
