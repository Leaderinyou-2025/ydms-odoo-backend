<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- TỈNH THÀNH -->
    <record id="view_ydms_state_tree" model="ir.ui.view">
        <field name="name">liy.ydms.state.tree</field>
        <field name="model">res.country.state</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" string="Tỉnh thành"/>
                <field name="code" string="Mã tỉnh"/>
                <field name="admin_code"/>
                <field name="country_id" string="Quốc gia"/>
                <field name="order_weight"/>
            </list>
        </field>
    </record>

    <record id="view_ydms_state_form" model="ir.ui.view">
        <field name="name">liy.ydms.state.form</field>
        <field name="model">res.country.state</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="country_id"/>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="admin_code"/>
                        <field name="order_weight"/>
                    </group>
                    <notebook>
                        <page string="Quận huyện">
                            <field name="district_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="admin_code"/>
                                </list>
                            </field>
                        </page>
                        <page string="Phường xã">
                            <field name="precint_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="admin_code"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ydms_state" model="ir.actions.act_window">
        <field name="name">Tỉnh thành</field>
        <field name="res_model">res.country.state</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- QUẬN HUYỆN -->
    <record id="view_ydms_district_tree" model="ir.ui.view">
        <field name="name">liy.ydms.district.tree</field>
        <field name="model">liy.ydms.district</field>
        <field name="arch" type="xml">
            <list>
                <field name="state_id"/>
                <field name="name"/>
                <field name="admin_code"/>
                <field name="order_weight"/>
            </list>
        </field>
    </record>

    <record id="view_ydms_district_form" model="ir.ui.view">
        <field name="name">liy.ydms.district.form</field>
        <field name="model">liy.ydms.district</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="state_id"/>
                        <field name="name"/>
                        <field name="admin_code"/>
                        <field name="order_weight"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ydms_district" model="ir.actions.act_window">
        <field name="name">Quận huyện</field>
        <field name="res_model">liy.ydms.district</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'group_by':'state_id'}</field>
    </record>

    <!-- XÃ PHƯỜNG -->
    <record id="view_ydms_precint_tree" model="ir.ui.view">
        <field name="name">liy.ydms.precint.tree</field>
        <field name="model">liy.ydms.precint</field>
        <field name="arch" type="xml">
            <list>
                <field name="state_id"/>
                <field name="district_id"/>
                <field name="name"/>
                <field name="admin_code"/>
                <field name="order_weight"/>
            </list>
        </field>
    </record>

    <record id="view_ydms_precint_form" model="ir.ui.view">
        <field name="name">liy.ydms.precint.form</field>
        <field name="model">liy.ydms.precint</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="state_id"/>
                        <field name="district_id" domain="[('state_id', '=', state_id)]"/>
                        <field name="name"/>
                        <field name="admin_code"/>
                        <field name="order_weight"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ydms_precint" model="ir.actions.act_window">
        <field name="name">Phường xã</field>
        <field name="res_model">liy.ydms.precint</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'group_by':'district_id'}</field>
    </record>

    <!-- MENU -->
    <menuitem id="menu_ydms_location_state" name="Tỉnh thành" parent="shared_directory_menu"
              action="action_ydms_state" sequence="30"/>
    <menuitem id="menu_ydms_location_district" name="Quận huyện" parent="shared_directory_menu"
              action="action_ydms_district" sequence="31"/>
    <menuitem id="menu_ydms_location_precint" name="Phường xã" parent="shared_directory_menu"
              action="action_ydms_precint" sequence="32"/>
</odoo>